<view class="page">
    <view class="page__bd">
        <view wx:if="{{!auth}}" class="weui-panel weui-panel_access">
            <view class="weui-panel__hd">商家登录</view>
            <view class="weui-panel__bd">
              <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">登录码</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" bindinput="onVerifyCodeInput" placeholder="请输入登录码" type="number" confirm-type="go" maxlength="6" adjust-position="true"/>
                    </view>
                </view>
              </view>
            </view>
        </view>
    </view>
</view>